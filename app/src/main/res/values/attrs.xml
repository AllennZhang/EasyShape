<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BorderTextView">
        <attr name="tvBorderColor" format="color|reference"/>
        <attr name="tvBorderWidth" format="dimension|reference"/>
        <attr name="tvBorderRadius" format="dimension|reference"/>
        <attr name="tvStartColor" format="color|reference"/>
        <attr name="tvEndColor" format="color|reference"/>
        <attr name="tvSolidColor" format="color|reference"/>
        <attr name="gradientOrientation">
            <enum name="LEFT_RIGHT" value="0"/>
            <enum name="RIGHT_LEFT" value="1"/>
            <enum name="TOP_BOTTOM" value="2"/>
            <enum name="BOTTOM_TOP" value="3"/>
            <enum name="TR_BL" value="4"/>
            <enum name="BL_TR" value="5"/>
            <enum name="BR_TL" value="6"/>
            <enum name="TL_BR" value="7"/>
        </attr>
        <attr name="dashWidth" format="dimension|reference"/>
        <attr name="dashGap" format="dimension|reference"/>
    </declare-styleable>
</resources>